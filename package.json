{
  "name": "kitchen-pal",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "proxy": "node local-proxy-server.js",
    "dev:with-proxy": "concurrently \"npm run proxy\" \"npm run dev\"",
    "server": "node server/server.js",
    "server:dev": "node --watch server/server.js",
    "dev:full": "concurrently \"npm run server:dev\" \"npm run dev\"",
    "dev:safe": "./start-dev-safe.sh",
    "setup:dev": "chmod +x scripts/setup-dev.sh && ./scripts/setup-dev.sh",
    "setup:dev:safe": "chmod +x scripts/setup-dev-with-prod.sh && ./scripts/setup-dev-with-prod.sh",
    "db:generate": "npx prisma generate",
    "db:push": "npx prisma db push",
    "db:migrate": "npx prisma migrate dev",
    "db:studio": "npx prisma studio",
    "db:seed": "node scripts/seed-dev-data.js",
    "db:reset": "npx prisma migrate reset --force && npm run db:seed",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:clean": "docker-compose down -v && docker system prune -f",
    "docker:deploy": "docker-compose build && docker-compose up -d",
    "docker:fix-db": "./fix-database-password.sh",
    "docker:deploy-and-fix": "npm run docker:deploy && npm run docker:fix-db"
  },
  "dependencies": {
    "@prisma/client": "^6.9.0",
    "@tailwindcss/postcss": "^4.1.8",
    "@tanstack/react-query": "^5.80.6",
    "@types/cheerio": "^0.22.35",
    "axios": "^1.9.0",
    "bcrypt": "^6.0.0",
    "cheerio": "^1.0.0",
    "dotenv": "^16.5.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-html-parser": "^7.0.1",
    "nodemailer": "^6.9.17",
    "pg": "^8.16.0",
    "prisma": "^6.9.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^3.25.56"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.19",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.10",
    "@types/node": "^22.14.0",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "postcss": "^8.5.4",
    "tailwindcss": "^4.1.8",
    "typescript": "~5.7.2",
    "vite": "^6.2.0"
  }
}
